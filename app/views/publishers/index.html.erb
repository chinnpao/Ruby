<h2><%= @page_title %></h2>

<table class="table table-striped">
	<tr>
		<th>Publisher Name</th>
		<th>Created Date</th>
		<th>Updated Date</th>
		<th>Actions</th>
	</tr>

	<% @publishers.each do |publisher| %>
		<tr>
			<td><%= publisher.name %></td>
			<td><%= publisher.created_at %></td>
			<td><%= publisher.updated_at %></td>
			<td>
				<%= link_to 'Edit', edit_publisher_path(publisher.id) %> | 
				<%= link_to 'Delete', publisher_path(publisher), method: :delete, data: {confirm: 'Are you sure?'} %>
			</td>
		</tr>
	<% end %>
</table>