<div id="books-show">
	<h3><%= @book.title %></h3>
	<div id="books-show-left">
		<%= image_tag(@book.coverpath) %>
	</div>
	<div id="books-show-right">
		<h4>Book info:</h4>
		<ul>
			<li><strong>Category:</strong> <%= @book.category.name %></li>
			<li><strong>Author:</strong> <%= @book.author.first_name + ' ' + @book.author.last_name %></li>
			<li><strong>Publisher:</strong> <%= @book.publisher.name %></li>
			<li><strong>Year:</strong> <%= @book.year %></li>
			<li><strong>ISBN</strong> <%= @book.isbn %></li>
			<li><strong>Format:</strong> <%= @book.format %></li>
			<li><strong>Pages:</strong> <%= @book.pages %></li>
		</ul>

		<%= link_to "Price: " + @book.price, @book.buy, class: 'btn btn-success', target: '_blank' %>
	</div>

	<div class="clearfix"></div>

	<h4>Excerpt</h4>
	<p><%= @book.excerpt %></p>

	<h4>Admin Functions</h4>
	<%= link_to 'Edit', edit_book_path(@book.id) %> |
	<%= link_to 'Delete', book_path(@book), method: :delete, data: {confirm: "Are you sure?"} %>
</div>